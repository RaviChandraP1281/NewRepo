<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>OtherValue_is_not_required</fullName>
        <active>true</active>
        <description>Other Value can only be used when Value = Other</description>
        <errorConditionFormula>AND(
NOT(ISPICKVAL(Value__c, &quot;Other&quot;))
)
&amp;&amp; Other_Value__c !=&quot;&quot;</errorConditionFormula>
        <errorDisplayField>Other_Value__c</errorDisplayField>
        <errorMessage>Other Value can only be used when Value = Other.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>OtherValue_is_required</fullName>
        <active>true</active>
        <errorConditionFormula>OR(
ISPICKVAL(Value__c, &quot;Other&quot;)
)
&amp;&amp; Other_Value__c =&quot;&quot;</errorConditionFormula>
        <errorDisplayField>Other_Value__c</errorDisplayField>
        <errorMessage>Other Value is required when Value = Other.</errorMessage>
    </validationRules>
</CustomObject>
