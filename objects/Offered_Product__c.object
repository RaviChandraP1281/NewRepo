    <fields>
        <fullName>DiscountDescription__c</fullName>
        <description>Translates a discount configuration into a plain text description</description>
        <externalId>false</externalId>
        <formula>IF(
  OR(
    OR(ISBLANK(Discount_Type__c),ISBLANK(Discount__c)),
    AND(UPPER(Discount_Type__c) == &apos;PERCENT&apos;,OR(ISBLANK(Unit__c),ISBLANK(Duration__c)))
  ),
  &apos;&apos;,
  CASE(UPPER(Discount_Type__c),
    &apos;PERCENT&apos;,
    TEXT(FLOOR(Discount__c)) + &apos;% discount for &apos;,
    &apos;FLAT&apos;,
    IF(
      ISBLANK(TEXT(CurrencyIsoCode)),
      &apos;&apos;,
      TEXT(CurrencyIsoCode) + &apos; &apos;
    ) + TEXT(Discount__c) + &apos; off for &apos;,
    &apos;&apos;
  ) +
  IF(
    OR(
     AND(Duration__c == 7300, UPPER(Unit__c) == &apos;DAY&apos;),
     AND(Duration__c == 7305, UPPER(Unit__c) == &apos;DAY&apos;),
     AND(Duration__c == 240, UPPER(Unit__c) == &apos;MONTH&apos;),
     AND(Duration__c == 20, UPPER(Unit__c) == &apos;YEAR&apos;)
    ),
    &apos;lifetime&apos;,
    IF(
      OR(
       AND(Duration__c == 365, UPPER(Unit__c) == &apos;DAY&apos;),
       AND(Duration__c == 12, UPPER(Unit__c) == &apos;MONTH&apos;)
      ),
      &apos;1 year&apos;,
      IF(
        NOT(OR(ISBLANK(Unit__c),ISBLANK(Duration__c))),
        TEXT(Duration__c) + &apos; &apos; + LOWER(Unit__c) + IF(
          Duration__c &gt; 1,
          &apos;s&apos;,
          &apos;&apos;
        ),
        &apos;&apos;
      )
    )
  )
)</formula>
