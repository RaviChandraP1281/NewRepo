<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Cannot_be_negative</fullName>
        <active>true</active>
        <description>Make sure the quantity is not entered as negative.</description>
        <errorConditionFormula>Quantity &lt; 0</errorConditionFormula>
        <errorDisplayField>Quantity</errorDisplayField>
        <errorMessage>Quantity cannot be negative.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Quantity_greater_than_one</fullName>
        <active>false</active>
        <description>Quantity for Online Product Opportunities cannot be greater than one.</description>
        <errorConditionFormula>AND
(
NOT(ISBLANK( Opportunity.Company_ID__c )),
Quantity &gt; 1
)</errorConditionFormula>
        <errorMessage>Quantity for Online Product Opportunities cannot be greater than one.</errorMessage>
    </validationRules>
</CustomObject>
